<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>V2 - @ViewData["Title"]</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta content="Premium Multipurpose Admin & Dashboard Template"
          name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/V2_New_Logo.ico" />

    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css"
          rel="stylesheet"
          type="text/css" />
    <link href="~/assets/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/metisMenu.min.css"
          rel="stylesheet"
          type="text/css" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <style>
        .login-button {
            background-color: #df4134;
            color: white;
            border-radius: 30px;
            outline: none;
            border-color: #df4134;
            padding: 0.375rem 0.75rem;
            font-size: 0.845rem;
            line-height: 1.8;
            border: 1px solid #df4134;
        }

        .user {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #e0e0e0;
        }

        .login-cards h2 {
            font-style: normal;
            font-weight: 500;
            font-size: 14px;
            line-height: 21px;
            color: #000000;
        }

        .account-body .auth-card .auth-logo-text h4 {
            font-weight: 800;
            font-size: 40px;
            letter-spacing: 0px;
            color: #000000;
            opacity: 1;
        }

        .login-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            width: 10%;
        }

        .signup {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .signup p {
                margin-bottom: 0%;
                font-size: 12px;
                line-height: 27px;
                letter-spacing: 0px;
                color: #5b5b5b;
                opacity: 1;
            }

        .signup-button {
            background: #df4134 0% 0% no-repeat padding-box;
            border-radius: 31px;
            opacity: 1;
            outline: none;
            border-color: #df4134;
            box-shadow: none;
            color: #ffffff;
            width: 120px;
            height: 30px;
            border: 1px solid #df4134;
        }

        .form-horizontal {
            border-top: 1px solid #dcdcdc;
        }

        .account-body .auth-form .auth-form-icon {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .invalid {
            border-color: red;
        }

       
    </style>
</head>

<body class="account-body accountbg">
    <!-- Log In page -->
    <div class="container">
        @RenderBody()
    </div>
    <!-- jQuery  -->
    <script>
        const loginCards = document.querySelectorAll(".login-cards");
        loginCards.forEach((item, index) => {
            item.addEventListener("click", () => {
                loginCards.forEach((item) => {
                    item.classList.remove("active");
                });
                item.classList.add("active");
            });
        });
    </script>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/metismenu.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/feather.min.js"></script>
    <script src="~/assets/js/jquery.slimscroll.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
    @await Component.InvokeAsync("NToastNotify")
    @RenderSection("Scripts", false)
</body>
</html>