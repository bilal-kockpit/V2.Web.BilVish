@model V2.Models.Master.MajorCategory
@{
    
}

<h1>Size</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border border-info">
            <div class="card-header bg-info text-white ">
                <h5 class="text-uppercase text-center">Major Categories</h5>
            </div>
            <div class="card-body">
                <form asp-action="MajorCategory" method="post">

                    <div class="form-group">
                        <label>Major Category</label>
                        <input asp-for="MajorCategoryName" class="form-control" />
                        <span asp-validation-for="MajorCategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <input type="submit" value="Add" class="btn btn-secondary" />
                    <a href="@Url.Action("GetAllMajorCategories")" class="btn-blue">Major Category List</a>
                </form>
            </div>
        </div>
    </div>
</div>



