@model V2.Models.Master.Division
@{
    ViewData["Title"] = "Division";
}

<h1>Division</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border border-info">
            <div class="card-header bg-info text-white ">
                <h5 class="text-uppercase text-center">Divisions</h5>
            </div>
            <div class="card-body">
                <form asp-action="Division" method="post">

                    <div class="form-group">
                        <label>Division</label>
                        <input asp-for="DivisionName" class="form-control" />
                        <span asp-validation-for="DivisionName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <input type="submit" value="Add" class="btn btn-secondary" />
                    <a href="@Url.Action("GetAllDivisions")" class="btn-blue">Division List</a>
               </form>
            </div>
        </div>
    </div>
</div>
