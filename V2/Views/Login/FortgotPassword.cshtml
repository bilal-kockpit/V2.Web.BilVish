@model V2.Models.Account.User
@{
    ViewData["Title"] = "FortgotPassword";
}

<h1>Fortgot Password</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border border-info">
            <div class="card-header bg-info text-white ">
                <h5 class="text-uppercase text-center">Forgot Password</h5>
            </div>
            <div class="card-body">
                <form asp-action="Login">

                    <div class="form-group">
                        <label>User Name</label>
                        <input asp-for="EmailId" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    Or
                    <div class="form-group">
                        <label asp-for="Mobile"></label>
                        <input asp-for="Password" class="form-control" id="password" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="text-left">
                            @Html.ActionLink("Create New User","Register")


                        </div>
                        <div class="text-right">
                            @Html.ActionLink("Forget Password","FortgotPassword")

                        </div>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-secondary"/>
                </form>
            </div>
        </div>
    </div>
</div>
